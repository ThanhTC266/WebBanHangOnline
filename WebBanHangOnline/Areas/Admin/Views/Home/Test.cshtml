    <h1>Table Form Example</h1>
    <form id="table-form">
        <table>
            <thead>
                <tr>
                    <th>Column 1</th>
                    <th>Column 2</th>
                    <th>Column 3</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" name="row1col1"></td>
                    <td><input type="text" name="row1col2"></td>
                    <td><input type="text" name="row1col3"></td>
                </tr>
                <tr>
                    <td><input type="text" name="row2col1"></td>
                    <td><input type="text" name="row2col2"></td>
                    <td><input type="text" name="row2col3"></td>
                </tr>
                <tr>
                    <td><input type="text" name="row3col1"></td>
                    <td><input type="text" name="row3col2"></td>
                    <td><input type="text" name="row3col3"></td>
                </tr>
            </tbody>
        </table>
        <button type="submit">Submit</button>
    </form>
    @section scripts{
        <script>

            $(document).ready(function () {
                $('#table-form').submit(function (event) {
                    event.preventDefault();
                    var tableData = [];
                    $('table tbody tr').each(function (row, tr) {
                        var rowData = {};
                        $(tr).find('input').each(function (col, td) {
                            rowData[$(td).attr('name')] = $(td).val();
                        });
                        tableData.push(rowData);
                    });
                    console.log(tableData);
                });
            });

            $(document).ready(function () {
    jQuery.validator.addMethod("ageInRange", function (value, element) {
        return value > 0 && value < 150;
    }, 'Not allow less than 0 and bigger than 150');

    $("#newApplicationStep3").validate({
        rules: {
            newApplicationStep3Name: {
                required: true,
                maxlength: 40
            },
            newApplicationStep3Gender: {
                required: true

            },
            newApplicationStep3Age: {
                required: true,
                ageInRange: true
            },
            newApplicationStep3HKID: {
                required: true,
                maxlength: 15
            },
            newApplicationStep3PassportNo: {
                required: true,
                maxlength: 15
            }
        },
        messages: {
            newApplicationStep3Name: {
                required: "Please input Name!"
            },
            newApplicationStep3Age: {
                required: "Please input Age!"
            },
            newApplicationStep3HKID: {
                required: "Please input HKID!"
            },
            newApplicationStep3PassportNo: {
                required: "Please input PassportNo!"
            },
        }

    });
});


